extends layout

block content
    h1 Sign up for your Blog account

    if message.length > 0
        p=message

    form(action='/signup' method='post')
        label username
        input(type='text' name='username' required)
        br
        label password
        input(type='password' name='password' required)
        br
        input(type='submit' name='signup' vaule='Sign up')